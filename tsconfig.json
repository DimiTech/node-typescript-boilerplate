{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./build/",
    "incremental": true,
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6"],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "paths": {
      "@app/*": [ "./app/*" ],
      "@infrastructure/*": [ "./infrastructure/*" ]
    }
  }
}
