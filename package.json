{
  "version": "0.1.0",
  "name": "node-typescript-boilerplate",
  "company": "example-llc",
  "description": "Node.js/TypeScript Boilerplate",
  "author": "Dušan Dimitrić <dusan_dimitric@yahoo.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:DusanDimitric/node-typescript-boilerplate.git"
  },
  "engines": {
    "node": "11.14.0"
  },
  "main": "./src/main.js",
  "scripts": {
    "lint": "tslint --project ./",
    "build": "webpack",
    "start": "node -r source-map-support/register ./build/app.js",
    "test": "nyc -- mocha",
    "test:coverage": "npm test && nyc report --reporter=html && open ./coverage/index.html"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "@types/sinon": "^7.0.11",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.4.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.12"
  },
  "nyc": {
    "all": true,
    "clean": true,
    "check-coverage": true,
    "per-file": false,
    "lines": 5,
    "statements": 5,
    "functions": 5,
    "branches": 0,
    "include": [
      "src/**/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register",
      "reflect-metadata/Reflect"
    ]
  },
  "mocha": {
    "spec": "./test/**/*.test.ts",
    "exit": true,
    "diff": true,
    "extension": [
      "ts"
    ],
    "package": "./package.json",
    "timeout": 5000,
    "reporter": "spec",
    "ui": "bdd"
  }
}
